

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      
      (
      <%= link_to "edit" ,edit_message_path(message) %>
      <%= link_to "destroy" , message ,method: :delete,data: { confirm:"削除してもよろしいですか？"} %>
      )
      <br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる　%>
<%= render "form" %>

<%= form_for(Message.new) do |f| %>
<% if @message.errors.present? %>
 <div class="alert alert-danger">
   <%= alert %>
   <ul>
     <% @message.errors.full_messages.each do |full_message| %>
     <li>
       <%= full_message %>
       </li>
       <% end %>
       </ul>
       </div>
       <% end %>
       
       
<div class="form-group">
    <h4>名前：</h4>
    <div class="col-sm-10">
  <%= f.text_field :name,:size=> "40×2" %>
</div>
</div>

</br>
<div class="form-group">
  <h4>内容：</h4>
  <div class="col-sm-10">
    <%= f.text_area :body,:size=> "40×10"  %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      </br>
      </br>
  <%= f.submit "投稿!!!",class: "btn btn-sm btn-default"  %>
  </div>
  </div>
<% end %>